{
  "name": "react-lib-components",
  "private": true,
  "workspaces": [
    "./packages/**/*"
  ],
  "description": "Monorepo template for React component library + TypeScript + Material UI + Lerna + Turbo + Storybook",
  "author": "Stenio Almeida da Silveira",
  "scripts": {
    "prepare": "husky install",
    "test": "turbo run test",
    "build": "turbo run build",
    "version:stable": "lerna version --yes",
    "publish:stable": "lerna publish from-git --yes",
    "publish:canary": "lerna publish --canary --no-git-tag-version --no-push --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.6",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^8.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
